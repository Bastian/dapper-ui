{
	"name": "@dapper-ui/core",
	"version": "0.0.4",
	"description": "An UI library for Svelte",
	"homepage": "https://github.com/Bastian/dapper-ui/",
	"license": "MIT",
	"repository": "github:bastian/dapper-ui",
	"scripts": {
		"dev": "vite dev",
		"buildLib": "svelte-kit sync && svelte-package && BUILD_TARGET=lib postcss src/lib/base.css > package/base.css",
		"buildDocs": "vite build",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.48",
		"@sveltejs/kit": "next",
		"@sveltejs/package": "next",
		"@tailwindcss/forms": "^0.5.3",
		"@types/dedent": "^0.7.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.19",
		"postcss-cli": "^10.1.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"prettier-plugin-tailwindcss": "^0.2.0",
		"svelte": "^3.53.1",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"tabler-icons-svelte": "^1.8.0",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^3.2.4",
		"vitest": "^0.25.3",
		"dedent": "^0.7.0",
		"highlight.js": "^11.7.0"
	},
	"type": "module",
	"dependencies": {}
}
