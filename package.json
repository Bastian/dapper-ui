{
	"name": "@dapper-ui/core",
	"version": "0.0.4",
	"description": "An UI library for Svelte",
	"homepage": "https://github.com/Bastian/dapper-ui/",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bastian/dapper-ui.git"
	},
	"scripts": {
		"dev": "vite dev",
		"buildLib": "svelte-kit sync && svelte-package && BUILD_TARGET=lib postcss src/lib/base.css > package/base.css",
		"buildDocs": "vite build",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"chromatic": "chromatic --exit-zero-on-changes"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@fontsource/open-sans": "^4.5.13",
		"@fontsource/overlock": "^4.5.9",
		"@fontsource/tinos": "^4.5.9",
		"@playwright/test": "1.29.1",
		"@storybook/addon-essentials": "^7.0.0-beta.15",
		"@storybook/addon-interactions": "^7.0.0-beta.15",
		"@storybook/addon-links": "^7.0.0-beta.15",
		"@storybook/blocks": "^7.0.0-beta.15",
		"@storybook/svelte": "^7.0.0-beta.15",
		"@storybook/sveltekit": "^7.0.0-beta.15",
		"@storybook/testing-library": "^0.0.13",
		"@storybook/addon-svelte-csf": "3.0.0-next.3",
		"@sveltejs/adapter-auto": "1.0.0",
		"@sveltejs/adapter-static": "1.0.0",
		"@sveltejs/kit": "1.0.1",
		"@sveltejs/package": "1.0.1",
		"@tailwindcss/forms": "^0.5.3",
		"@types/dedent": "^0.7.0",
		"@types/prismjs": "^1.26.0",
		"@typescript-eslint/eslint-plugin": "5.47.1",
		"@typescript-eslint/parser": "5.47.1",
		"autoprefixer": "^10.4.13",
		"dedent": "^0.7.0",
		"eslint": "8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-storybook": "^0.6.8",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.19",
		"postcss-cli": "^10.1.0",
		"prettier": "2.8.1",
		"prettier-plugin-svelte": "2.9.0",
		"prettier-plugin-tailwindcss": "0.2.1",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.0.0-beta.15",
		"svelte": "3.55.0",
		"svelte-check": "3.0.1",
		"svelte-preprocess": "5.0.0",
		"tabler-icons-svelte": "^1.8.0",
		"tailwindcss": "^3.2.4",
		"tslib": "^2.4.1",
		"typescript": "4.9.4",
		"vite": "4.0.3",
		"vitest": "0.26.2"
	},
	"type": "module",
	"bugs": {
		"url": "https://github.com/bastian/dapper-ui/issues"
	}
}
